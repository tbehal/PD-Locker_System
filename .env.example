# ================================
# Locker Management System - Environment Variables
# ================================
# Copy this file to .env and fill in your values
# NEVER commit your .env file to version control!

# ================================
# Admin Authentication (REQUIRED)
# ================================
# Plain text password (for development) or bcrypt hash (for production)
# To generate a bcrypt hash, run: npx bcrypt-cli hash "your_password"
ADMIN_PASSWORD=admin123

# JWT secret for signing admin tokens (use a long random string)
JWT_SECRET=dev_jwt_secret_change_in_production

# ================================
# Stripe Configuration (REQUIRED)
# ================================
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Stripe Webhook Secret
# Get this from https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price ID (optional - dynamic pricing is used if not set)
# Create this in Stripe Dashboard > Products
STRIPE_PRICE_ID=price_your_price_id_here

# ================================
# Application URLs
# ================================
# Frontend URL for redirects after payment
FRONTEND_URL=http://localhost:4173

# Backend port
PORT=4001

# App URL (for Next.js pages if applicable)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ================================
# HubSpot Integration (OPTIONAL)
# ================================
# Get from HubSpot > Settings > Integrations > Private Apps
HUBSPOT_ACCESS_TOKEN=

# ================================
# Email Configuration (OPTIONAL)
# ================================
# SMTP settings for AWS SES or other email providers
SMTP_HOST=email-smtp.us-east-1.amazonaws.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@prepdoctors.com

# Admin email for notifications (locker availability, etc.)
ADMIN_EMAIL=admin@prepdoctors.com

# ================================
# Environment
# ================================
NODE_ENV=development
